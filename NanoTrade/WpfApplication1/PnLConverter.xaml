<Window x:Class="PnLConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PnLConverter" Height="350" Width="525">
    <StackPanel>
        <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>

        <TextBox Name="txtEditor" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="272*"/>
                <RowDefinition Height="71*"/>
            </Grid.RowDefinitions>
            <Button Content="生成业绩单" 
        Name="btnsync" Grid.Row="1"
        FontSize="20" FontFamily="Times New Roman"
         />
            <DataGrid Name="dgEmp" AutoGenerateColumns="False" ColumnWidth="*"
           >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="买入股数" Binding="{Binding buyShares}"></DataGridTextColumn>
                    <DataGridTextColumn Header="买入价格" Binding="{Binding buyPrice}"></DataGridTextColumn>
                    <DataGridTextColumn Header="代码" Binding="{Binding ticker}"></DataGridTextColumn>
                    <DataGridTextColumn Header="卖出股数" Binding="{Binding sellShares}"></DataGridTextColumn>
                    <DataGridTextColumn Header="卖出价格" Binding="{Binding sellPrice}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</Window>
