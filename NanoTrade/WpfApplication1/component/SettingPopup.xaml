<Window x:Class="PnLConverter.component.SettingPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:PnLConverter.usercontrol"
        Title="设置" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="海通">
                <control:StockTextBox x:Name="stockBox_HAITONG"></control:StockTextBox>
            </TabItem>
            <TabItem Header="小茶几" >
                <control:StockTextBox x:Name="stockBox_XIAOCHAJI"></control:StockTextBox>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" Margin="5" Width="50" Content="保存" Click="Button_Click"></Button>
    </Grid>
</Window>
